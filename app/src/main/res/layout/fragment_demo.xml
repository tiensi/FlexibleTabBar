<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <Button
      android:id="@+id/btn_change_font"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/change_font"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <Button
      android:id="@+id/btn_change_width_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/change_width_text"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btn_change_font"
      />

  <Button
      android:id="@+id/btn_change_width"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/change_width"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btn_change_width_text"
      />

  <Button
      android:id="@+id/btn_change_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/change_icon"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btn_change_width"
      />
</android.support.constraint.ConstraintLayout>
