<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flexibletab="http://schemas.android.com/apk/res-auto"
    >
  <data/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <com.tiensinoakuma.flexibletabbarapp.FlexibleTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        flexibletab:fontFamilyPath="@string/waltograph"
        flexibletab:stripWidth="@dimen/spacing_12dp"
        flexibletab:stripMatchTextWidth="false"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  </LinearLayout>
</layout>